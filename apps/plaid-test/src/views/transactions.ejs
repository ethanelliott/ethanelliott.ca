<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="container">
      <header>
        <a href="/" class="back-link">‚Üê Back to Home</a>
        <h1>üìä Transactions</h1>
        <% if (institutionName) { %>
        <p class="subtitle"><%= institutionName %></p>
        <% } %>
      </header>

      <section class="summary-section">
        <div class="summary-card">
          <div class="summary-item">
            <span class="label">Period:</span>
            <span class="value"><%= startDate %> to <%= endDate %></span>
          </div>
          <div class="summary-item">
            <span class="label">Total Transactions:</span>
            <span class="value"><%= totalTransactions %></span>
          </div>
          <div class="summary-item">
            <span class="label">Showing:</span>
            <span class="value"><%= transactions.length %> transactions</span>
          </div>
        </div>
      </section>

      <section class="transactions-section">
        <% if (transactions && transactions.length > 0) { %>
        <div class="transactions-table-wrapper">
          <table class="transactions-table">
            <thead>
              <tr>
                <th>Date</th>
                <th>Merchant</th>
                <th>Category</th>
                <th>Account</th>
                <th class="amount-col">Amount</th>
              </tr>
            </thead>
            <tbody>
              <% transactions.forEach(function(tx) { %> <% const account =
              accounts.find(a => a.account_id === tx.account_id); const
              accountName = account ? account.name : 'Unknown'; %>
              <tr>
                <td><%= tx.date %></td>
                <td>
                  <div class="merchant-cell">
                    <% if (tx.logo_url) { %>
                    <img
                      src="<%= tx.logo_url %>"
                      alt=""
                      class="merchant-logo"
                    />
                    <% } %>
                    <span><%= tx.merchant_name || tx.name %></span>
                  </div>
                </td>
                <td>
                  <% if (tx.personal_finance_category) { %>
                  <span class="category"
                    ><%= tx.personal_finance_category.primary %></span
                  >
                  <% } else if (tx.category && tx.category.length > 0) { %>
                  <span class="category"><%= tx.category.join(' > ') %></span>
                  <% } else { %>
                  <span class="category">Uncategorized</span>
                  <% } %>
                </td>
                <td><%= accountName %></td>
                <td
                  class="amount-col <%= tx.amount > 0 ? 'negative' : 'positive' %>"
                >
                  <%= tx.amount > 0 ? '-' : '+' %>$<%=
                  Math.abs(tx.amount).toFixed(2) %>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <% } else { %>
        <p class="empty-state">No transactions found for this period.</p>
        <p class="help-text">
          Note: In sandbox mode, you may need to wait for Plaid to generate test
          transactions.
        </p>
        <% } %>
      </section>

      <section class="actions">
        <a href="/accounts/<%= itemId %>" class="btn btn-primary"
          >View Accounts</a
        >
        <a href="/" class="btn btn-secondary">Back to Dashboard</a>
      </section>
    </div>
  </body>
</html>
