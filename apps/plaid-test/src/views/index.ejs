<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="container">
      <header>
        <h1>üè¶ Plaid API Test</h1>
        <p class="subtitle">Testing Plaid integration for bank connections</p>
      </header>

      <section class="status-card">
        <h2>Configuration Status</h2>
        <div class="status-grid">
          <div class="status-item">
            <span class="label">Credentials:</span>
            <span class="value <%= hasCredentials ? 'success' : 'error' %>">
              <%= hasCredentials ? '‚úì Configured' : '‚úó Missing' %>
            </span>
          </div>
          <div class="status-item">
            <span class="label">Environment:</span>
            <span class="value"><%= plaidEnv %></span>
          </div>
        </div>
        <% if (!hasCredentials) { %>
        <div class="warning">
          <p><strong>‚ö†Ô∏è Missing Credentials</strong></p>
          <p>Set the following environment variables:</p>
          <ul>
            <li><code>PLAID_CLIENT_ID</code></li>
            <li><code>PLAID_SECRET</code></li>
            <li><code>PLAID_ENV</code> (optional, defaults to 'sandbox')</li>
          </ul>
          <p>
            Get your credentials at
            <a href="https://dashboard.plaid.com/" target="_blank"
              >dashboard.plaid.com</a
            >
          </p>
        </div>
        <% } %>
      </section>

      <section class="action-section">
        <% if (hasCredentials) { %>
        <a href="/link" class="btn btn-primary">Connect a Bank Account</a>
        <% } else { %>
        <button class="btn btn-primary" disabled>Connect a Bank Account</button>
        <p class="help-text">
          Configure credentials to enable bank connections
        </p>
        <% } %>
      </section>

      <section class="items-section">
        <h2>Connected Accounts (<%= items.length %>)</h2>
        <% if (items.length === 0) { %>
        <p class="empty-state">
          No accounts connected yet. Click "Connect a Bank Account" to get
          started.
        </p>
        <% } else { %>
        <div class="items-list">
          <% items.forEach(function(item) { %>
          <div class="item-card">
            <div class="item-header">
              <h3><%= item.institutionName || 'Unknown Institution' %></h3>
              <span class="item-id">ID: <%= item.id.substring(0, 8) %>...</span>
            </div>
            <div class="item-meta">
              <span
                >Connected: <%= new Date(item.createdAt).toLocaleDateString()
                %></span
              >
            </div>
            <div class="item-actions">
              <a href="/accounts/<%= item.id %>" class="btn btn-small"
                >View Accounts</a
              >
              <a href="/transactions/<%= item.id %>" class="btn btn-small"
                >View Transactions</a
              >
              <button
                onclick="deleteItem('<%= item.id %>')"
                class="btn btn-small btn-danger"
              >
                Disconnect
              </button>
            </div>
          </div>
          <% }); %>
        </div>
        <% } %>
      </section>

      <section class="api-section">
        <h2>API Endpoints</h2>
        <div class="api-list">
          <div class="api-item">
            <code>GET /api/health</code>
            <span>Health check and configuration status</span>
          </div>
          <div class="api-item">
            <code>POST /api/create_link_token</code>
            <span>Create a link token for Plaid Link</span>
          </div>
          <div class="api-item">
            <code>POST /api/exchange_token</code>
            <span>Exchange public token for access token</span>
          </div>
          <div class="api-item">
            <code>GET /api/items</code>
            <span>List all connected items</span>
          </div>
          <div class="api-item">
            <code>GET /api/items/:itemId/accounts</code>
            <span>Get accounts for an item</span>
          </div>
          <div class="api-item">
            <code>GET /api/items/:itemId/transactions</code>
            <span>Get transactions for an item</span>
          </div>
          <div class="api-item">
            <code>DELETE /api/items/:itemId</code>
            <span>Disconnect a bank account</span>
          </div>
        </div>
      </section>
    </div>

    <script>
      async function deleteItem(itemId) {
        if (!confirm('Are you sure you want to disconnect this account?')) {
          return;
        }

        try {
          const response = await fetch(`/api/items/${itemId}`, {
            method: 'DELETE',
          });

          if (response.ok) {
            window.location.reload();
          } else {
            const data = await response.json();
            alert('Error: ' + (data.error || 'Failed to disconnect'));
          }
        } catch (error) {
          alert('Error: ' + error.message);
        }
      }
    </script>
  </body>
</html>
